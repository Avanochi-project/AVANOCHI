{
    "Authentication": {
        "routes": {
            "register": {
                "description": "Register a new user",
                "url": "http://localhost:7071/api/auth/register",
                "method": "POST",
                "params": {
                    "username": "string",
                    "password": "string"
                },
                "response": {
                    "user_id": "string"
                }
            },
            "login": {
                "description": "Login a specific user",
                "url": "http://localhost:7071/api/auth/login",
                "method": "POST",
                "params": {
                    "username": "string",
                    "password": "string"
                }, 
                "response": {
                    "token": "string"
                }
            },
            "user_info": {
                "description": "Get user information",
                "url": "http://localhost:7071/api/auth/user_info",
                "method": "GET",
                "params": {},
                "response": {
                    "user_id": "string",
                    "username": "string"
                }
            }
        },
        "description": "Endpoint for user authentication."
    },
    "stats": {
        "routes": {
            "get_stats": {
                "description": "Get user statistics",
                "url": "http://localhost:7071/api/stats/",
                "method": "GET",
                "params": {},
                "response": {
                    "user_id": "string",
                    "username": "string",
                    "hours_worked": "number",
                    "tasks_completed": "number"
                }
            }
        },
        "description": "Endpoint to retrieve user statistics. Requires 'user_id' as a path parameter."
    },
    "tasks": {
        "routes": {
            "create_task": {
                "description": "Create a new task",
                "url": "http://localhost:7071/api/tasks",
                "method": "POST",
                "params": {
                    "title": "string",
                    "duration": "number"
                },
                "response": {
                    "task_id": "string"
                }
            },
            "get_tasks": {
                "description": "Get all tasks for a user",
                "url": "http://localhost:7071/api/tasks",
                "method": "GET",
                "params": {},
                "response": {
                    "tasks": "array of task objects"
                }
            },
            "complete_task": {
                "description": "Mark a task as completed",
                "url": "http://localhost:7071/api/tasks",
                "method": "PATCH",
                "params": {
                    "task_id": "string"
                },
                "response": {
                    "task_id": "string",
                    "task_title": "string",
                    "completed": "string"
                }
            }
        },
        "description": "Endpoints to create and retrieve tasks."
    },
    "Work Session": {
        "routes": {
            "start_session": {
                "description": "Start a new work session",
                "url": "http://localhost:7071/api/work_sessions/start",
                "method": "POST",
                "params": {},
                "response": {
                    "session_id": "string",
                    "start_time": "string"
                }
            },
            "end_session": {
                "description": "End the selected work session",
                "url": "http://localhost:7071/api/work_sessions/end",
                "method": "POST",
                "params": {
                    "session_id": "string"
                }
            },
            "get_session": {
                "description": "Get the active work session for a user",
                "url": "http://localhost:7071/api/work_sessions/active",
                "method": "GET",
                "params": {},
                "response": {
                    "session_id": "string",
                    "user_id": "string",
                    "start_time": "string",
                    "end_time": "string or null"
                }
            }
        },
        "description": "Endpoints to manage work sessions."
    }
}