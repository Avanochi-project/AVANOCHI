{
    "Authentication": {
        "routes": {
            "register": {
                "description": "Register a new user",
                "url": "http://localhost:7071/api/auth/register",
                "method": "POST",
                "body": {
                    "username": "string",
                    "password": "string"
                }
            },
            "login": {
                "description": "Login a specific user",
                "url": "http://localhost:7071/api/auth/login",
                "method": "POST",
                "body": {
                    "username": "string",
                    "password": "string"
                }
            },
            "user_info": {
                "description": "Get user information",
                "url": "http://localhost:7071/api/auth/user_info/",
                "method": "GET",
                "body": {}
            }
        },
        "description": "Endpoint for user authentication."
    },
    "stats": {
        "routes": {
            "get_stats": {
                "description": "Get user statistics",
                "url": "http://localhost:7071/api/stats/{user_id}",
                "method": "GET",
                "params": {
                    "user_id": "string"
                }
            }
        },
        "description": "Endpoint to retrieve user statistics. Requires 'user_id' as a path parameter."
    },
    "tasks": {
        "routes": {
            "create_task": {
                "description": "Create a new task",
                "url": "http://localhost:7071/api/tasks",
                "method": "POST",
                "body": {
                    "title": "string",
                    "description": "string",
                    "due_date": "string"
                }
            },
            "get_tasks": {
                "description": "Get all tasks for a user",
                "url": "http://localhost:7071/api/tasks/{user_id}",
                "method": "GET",
                "params": {
                    "user_id": "string"
                }
            }
        },
        "description": "Endpoints to create and retrieve tasks."
    }
}